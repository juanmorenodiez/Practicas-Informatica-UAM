	$(CC) $(CFLAGS) -c $<



dist:
	@echo ">>>>>>Making .tgz file with all the files"
	rm -f *.o core $(EXE)
	tar cvzf 2272_P06_1.tgz makefile *.c *.odt *.pdf *.txt
